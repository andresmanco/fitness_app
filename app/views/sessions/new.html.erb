<div class="login-page-body">
<div class="card">
  <div class="card-header">
    <h1>Login</h1>
  </div>

    <%= form_tag :login do %>

  <div class="card-body">

    <div class="form-group">
      <%= text_field_tag :user_name, nil, placeholder: 'User name: ' %>
    </div>

    <div class="form-group">
      <%= text_field_tag :password, nil, placeholder: 'Password: ' %>
    </div>

    <div class="form-group">
      <%= submit_tag 'Log In', class: 'btn btn-primary' %>
    </div>

    <div>
      <p><%= link_to "Create an account", new_user_path %>
    </div>

    <% end %>

    <% if flash[:alert] %>
      <div style="color:red"><%= flash[:alert] %></div>
    <% end %>

  </div>
</div>
</div>
